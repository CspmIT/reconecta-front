{
	"productName": "Reconecta",
	"version": "2.0.0",
	"identifier": "com.reconecta.desktop",
	"build": {
		"beforeDevCommand": "npm run dev",
		"beforeBuildCommand": "npm run build",
		"devUrl": "http://localhost:1420",
		"frontendDist": "../dist"
	},
	"bundle": {
		"active": true,
		"targets": ["msi", "deb", "rpm", "appimage"],
		"icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
		"createUpdaterArtifacts": true
	},
	"app": {
		"windows": [
			{
				"title": "Reconecta",
				"width": 1024,
				"height": 768
			}
		],
		"security": {
			"capabilities": [
				{
					"identifier": "store-access",
					"windows": ["main"],
					"platforms": ["linux", "macOS", "windows"],
					"permissions": ["store:default", "process:default", "updater:default"]
				}
			]
		}
	},
	"plugins": {
		"updater": {
			"active": true,
			"endpoints": ["https://github.com/CspmIT/reconecta-front/releases/latest/download/latest.json"],
			"dialog": true,
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IENFOUE0OEYyMDA5NDkyNEQKUldSTmtwUUE4a2lhenBraVNOd2cwOU1ZbkxWdVJTU0lEbUZiTkp0VTFRenhtdndVZ1VwUlQ4OG0K"
		}
	}
}
