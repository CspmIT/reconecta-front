{
	"build": {
		"beforeDevCommand": "npm run dev",
		"beforeBuildCommand": "npm run build",
		"devPath": "http://localhost:1420",
		"distDir": "../dist",
		"withGlobalTauri": true
	},
	"package": {
		"productName": "Reconecta",
		"version": "1.0.0"
	},
	"tauri": {
		"allowlist": {
			"dialog": {
				"all": true
			},
			"shell": {
				"all": false,
				"open": true
			},
			"http": {
				"all": true
			},
			"fs": {
				"copyFile": true,
				"readDir": true,
				"readFile": true,
				"writeFile": true
			},
			"notification": {
				"all": true
			},
			"app": {
				"all": true,
				"hide": true,
				"show": true
			}
		},
		"windows": [
			{
				"title": "Reconecta",
				"width": 1024,
				"height": 768,
				"minWidth": 1024,
				"minHeight": 600,
				"resizable": true,
				"decorations": true
			}
		],
		"security": {
			"csp": "default-src blob: data: filesystem: ws: http: https: 'unsafe-inline' 'unsafe-eval'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; object-src 'none';"
		},
		"bundle": {
			"active": true,
			"targets": ["deb", "updater", "msi", "app", "dmg"],
			"identifier": "com.cooptech.reconecta",
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			]
		}
	},
	"plugins": {
		"store": {
			"version": "2",
			"dir": ".storage"
		}
	}
}
