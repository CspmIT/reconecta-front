{
	"build": {
		"beforeDevCommand": "npm run dev",
		"beforeBuildCommand": "npm run build",
		"devPath": "http://localhost:1420",
		"distDir": "../dist"
	},
	"package": {
		"productName": "Reconecta",
		"version": "1.0.0"
	},
	"tauri": {
		"allowlist": {
			"dialog": {
				"all": true
			},
			"shell": {
				"all": false,
				"open": true
			}
		},
		"windows": [
			{
				"title": "Reconecta",
				"width": 1024,
				"height": 768,
				"minWidth": 1024,
				"minHeight": 600,
				"resizable": true
			}
		],
		"security": {
			"csp": null
		},
		"updater": {
			"active": true,
			"endpoints": ["https://your-update-server.com/api/v1/update/{{target}}/{{current_version}}"],
			"dialog": true,
			"pubkey": "your-public-key-here"
		},
		"bundle": {
			"active": true,
			"targets": "all",
			"identifier": "com.cooptech.reconecta",
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			]
		}
	}
}
